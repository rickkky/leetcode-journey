{
  "name": "leetcode-journey",
  "author": "ricky",
  "description": "leetcode solutions",
  "keywords": [
    "leetcode"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rickkky/leetcode-journey.git"
  },
  "homepage": "https://github.com/rickkky/leetcode-journey",
  "bugs": {
    "url": "https://github.com/rickkky/leetcode-journey/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "commit:cz": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  }
}
